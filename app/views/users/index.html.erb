<p id="notice"><%= notice %></p>

<h1>List of Owners (Users)</h1>

<table>
  <thead>
    <tr>
      <th>Owner's Name</th></br>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td><br>
        <td><%= user.email %></td>
        <td><%= link_to 'Play', user %></td>
        <td><%= link_to 'Substitute', edit_user_path(user) %></td>
        <td><%= link_to 'Cut from Team', user, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

